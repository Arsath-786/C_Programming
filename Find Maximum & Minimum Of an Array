#include <stdio.h>
int main()
{
    int arr[100],n,i,max,min;
    printf("enter the no of elements:");
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        printf("enter elements:\n");
        scanf("%d",&arr[i]);
    }
    max=arr[0];
    min=arr[0];
    for(i=0;i<n;i++)
    {
        if(arr[i]>max)
        {
            max=arr[i];
        }
        if(arr[i]<min)
        {
            min=arr[i];
        }
    }
    printf("maximum value is %d\n",max);
    printf("minimum value is %d\n",min);
    return 0;
}
